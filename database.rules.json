{
    "rules": {
        ".read": false,
        ".write": false,
        "status": {
            ".read": "auth != null",
            "$uid": {
                ".write": "auth != null && auth.uid === $uid"
            }
        },
        "typing": {
            "$chatId": {
                ".read": "auth != null",
                "$uid": {
                    ".write": "auth != null && auth.uid === $uid",
                    ".validate": "newData.isBoolean()"
                }
            }
        },
        "rate_limits": {
            "$uid": {
                ".read": false,
                ".write": false
            }
        }
    }
}