{
    "rules": {
        "status": {
            "$userId": {
                ".read": "auth != null",
                ".write": "auth != null && auth.uid == $userId"
            }
        },
        "chats": {
            "$chatId": {
                ".read": "auth != null",
                "typing": {
                    "$userId": {
                        ".write": "auth != null && auth.uid == $userId",
                        ".validate": "newData.isNumber() || newData.val() == null"
                    }
                },
                "signals": {
                    "$messageId": {
                        ".write": "auth != null",
                        ".validate": "newData.hasChildren(['senderId', 'timestamp'])"
                    }
                },
                "status": {
                    "$messageId": {
                        ".write": "auth != null"
                    }
                }
            }
        }
    }
}