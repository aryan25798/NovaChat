rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper to check if user is a participant of the chat in Firestore
    function isParticipant(chatId) {
      return request.auth != null && 
        request.auth.uid in firestore.get(/databases/(default)/documents/chats/$(chatId)).data.participants;
    }
    
    function isAdmin() {
      return request.auth != null && (request.auth.token.get('isAdmin', false) == true || request.auth.token.get('superAdmin', false) == true);
    }

    function isFriend(targetUserId) {
      return request.auth != null && (
        request.auth.uid == targetUserId ||
        request.auth.uid in firestore.get(/databases/(default)/documents/users/$(targetUserId)).data.friends
      );
    }

    // 1. Chat Media - Secure Access
    match /uploads/{chatId}/{allPaths=**} {
      // Allow Admin to skip Firestore lookup (Short-circuit)
      allow read: if isAdmin() || isParticipant(chatId);
      
      allow write: if (isAdmin() || isParticipant(chatId)) &&
                   request.resource.size < 50 * 1024 * 1024 && // Max 50MB
                   request.resource.contentType.matches('image/.*|video/.*|audio/.*|application/pdf|text/plain');
    }
    
    // 2. Profile Photos - Optimistic Public Read
    match /profiles/{fileName} {
      // Only the user themselves can upload/update their profile photo
      allow write: if request.auth != null && fileName.matches(request.auth.uid + '_.*');
      // Authenticated users can read profile photos - No Firestore lookup needed
      allow read: if request.auth != null;
    }

    // 3. Status Media - Friends Only
    match /status/{userId}/{allPaths=**} {
      // Owner can write (image/video/audio only)
      allow write: if request.auth != null && request.auth.uid == userId &&
                   request.resource.size < 10 * 1024 * 1024 &&
                   request.resource.contentType.matches('image/.*|video/.*|audio/.*'); // Max 10MB
      
      // OWNER OR FRIEND can read.
      // We check if request.auth.uid is in the owner's friends list in Firestore.
      allow read: if isAdmin() || 
                   (request.auth != null && (
                     request.auth.uid == userId || 
                     isFriend(userId)
                   ));
    }
  }
}
